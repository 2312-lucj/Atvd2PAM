<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical"
    tools:context=".SingUpActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/logo"
        android:backgroundTint="#fff" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/botao_edit"
        android:hint="User Name"
        android:padding="15dp"
        android:textColorHint="#fff"
        android:drawableRight="@drawable/ic_baseline_account"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/botao_edit"
        android:hint="Password"
        android:padding="15dp"
        android:textColorHint="#fff"
        android:drawableRight="@drawable/ic_baseline_key"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/botao_edit"
        android:hint="E-mail"
        android:padding="15dp"
        android:textColorHint="#fff"
        android:drawableRight="@drawable/ic_baseline_email"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/botao_edit"
        android:hint="Phone"
        android:padding="15dp"
        android:textColorHint="#fff"
        android:drawableRight="@drawable/ic_baseline_phone_iphone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="125dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="8dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:background="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Allow Term || Conditions"
            android:textColor="#fff" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/botao_redondo"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="17sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="90dp"
        android:gravity="right"
        android:text="Already have an account?"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="Sign in"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnSetaaSignIn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_baseline_arrow" />


    </LinearLayout>

</LinearLayout>